<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>GilGoblin.DataUpdater</RootNamespace>
    <PackageId>GilGoblin.DataUpdater</PackageId>
    <OutputType>Exe</OutputType>
    <Version>2.1.0</Version>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Project>LICENSE.txt</Project>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="GilGoblin.Api" Version="2.0.*"/>
    <PackageReference Include="GilGoblin.Fetcher" Version="2.0.*"/>
    <PackageReference Include="GilGoblin.Batcher" Version="1.2.*"/>
    <PackageReference Include="GilGoblin.Database" Version="3.0.*"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.*"/>
    <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="6.0.*"/>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.*"/>
    <PackageReference Include="Serilog" Version="4.2.*"/>
    <PackageReference Include="Serilog.AspNetCore" Version="4.2.*"/>
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.*"/>
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.*"/>
    <PackageReference Include="Serilog.Sinks.RollingFile" Version="3.3.*"/>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../Api/Api.csproj"/>
    <ProjectReference Include="../Batcher/Batcher.csproj"/>
    <ProjectReference Include="../Database/Database.csproj"/>
    <ProjectReference Include="../Fetcher/Fetcher.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="README.md" Pack="true" PackagePath="/"/>
    <None Include="LICENSE.txt" Pack="true" PackagePath="/"/>
    <None Include="icon.png" Pack="true" PackagePath="/"/>
  </ItemGroup>
</Project>